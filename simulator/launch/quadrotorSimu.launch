<launch>

    <!--
    <arg name="drone_number" default="1" />
    <group ns="quadrotor$(arg drone_number)">   
    -->
        <node name="quadrotorSimu" pkg="simulator" type="quadrotorSimu.py" output="screen">
              <!-- <param name="drone_id" value="$(arg drone_number)" /> -->
        </node>

        <node name="positionCtrl" pkg="simulator" type="positionCtrl.py" output="screen">
        </node>

        <node name="attitudeCtrl" pkg="simulator" type="attitudeCtrl.py" output="screen">
        </node>

    <!--
    </group>
    -->

    <param name="robot_description" command="$(find xacro)/xacro $(find simulator)/urdf/quadrotor.urdf.xacro" />
	<!-- <param name="use_gui" value="True"/> -->
	<node name="quadrotor_joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" ></node>
	<node name="quadrotor_robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
	

    <node name="visu" pkg="rviz" type="rviz" output="screen" args="-d $(find simulator)/rviz/quadrotorSimu.rviz" />

</launch>


